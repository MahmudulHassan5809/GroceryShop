<% layout('layout') %>

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="card mt-3">

                <h5 class="card-header info-color white-text text-center py-4 mb-2">
                    <strong>Riview</strong>
                </h5>

                <!--Card content-->
                <div class="card-body px-lg-5 pt-0">
                	<span id="error"></span>
                    <% include ../partials/message %>
                    <!-- Form -->
                    <form class="text-center"  method="POST"  style="color: #757575;">

						<input class="form-control" id="id" value="<%= product._id %>" name="id" type="hidden">

						 <div class="form-group ">
		                    <label for="">Review On</label>
		                    <input id="receiver" class="form-control" name="receiver" value="<%= product.name %>" type="text" style="margin-bottom:20px;">
		                </div>

						<div class="form-group">
		                    <label for="">Rating</label>
		                    <div class="col-sm-12" id="star_rating">
		                        <img id="1_star" src="/img/star_off.png" alt="1" title="Bad" width="20px">
		                        <img id="2_star" src="/img/star_off.png" alt="2" title="Poor" width="20px">
		                        <img id="3_star" src="/img/star_off.png" alt="3" title="Fair" width="20px">
		                        <img id="4_star" src="/img/star_off.png" alt="4" title="Good" width="20px">
		                        <img id="5_star" src="/img/star_off.png" alt="5" title="Excellent" width="20px">

								<input type="hidden" name="clickedValue" id="clickedValue">
		                        <span id="showTitle"></span>
		                    </div>

		                </div>


						<div class="form-group ">
		                    <label for="">Review</label>
		                    <textarea name="review" id="review" rows="8" cols="80" class="form-control"></textarea>
		                </div>


                        <!-- Review up button -->
                        <div class="form-group">
		                    <input type="submit" id="rate" value="Create" class="btn btn-primary" name="rate" style="">
		                </div>





                    </form>
                    <!-- Form -->

                </div>
            </div>
		</div>
	</div>
</div>
