<% layout('layout') %>

<div class="container mt-4">
	<div class="row">
		<div class="col-md-3">
			<img src="<%= user.photo %>" class="img-circle">
		</div>
		<div class="col-md-9 personal-info">
			<% include ../partials/message %>
	        <h3>Personal info</h3>

	        <form method="POST" action="/users/profile" class="form-horizontal" role="form">
		        <div class="form-group">
		            <label>Name:</label>
		            <input
		            class="form-control"
		            type="text"
		            name="name"
		            value="<%= user.name %>">
		        </div>

		        <div class="form-group">
		            <label>Email</label>
		            <input
		            class="form-control"
		            type="email"
		            name="email"
		            value="<%= user.email %>">

		        </div>

		        <div class="form-group">
		            <label>Phone:</label>
		            <input
		            class="form-control"
		            type="text"
		            name="phone"
		            value="<%= user.phone %>">
		        </div>

		        <div class="form-group">
		            <label >Address</label>
		            <input
		            class="form-control"
		            type="text"
		            name="address"
		            value="<%= user.address %>">
		        </div>

		        <div class="form-group">
		        	<button type="submit" class="btn btn-info btn-md">Update</button>
		        </div>

	        </form>
    	</div>
  </div>
</div>
	</div>
</div>
