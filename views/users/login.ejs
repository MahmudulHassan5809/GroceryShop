<% layout('layout') %>

<!-- Material form register -->
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <% include ../partials/message %>
            <div id="login-box">
                <div class="left">

                        <h1>Sign up</h1>

                        <form action="/users/login" method="POST">


                            <input
                            type="text"
                            name="email"
                            placeholder="E-mail"
                            class="login-box"
                            />

                            <input
                            type="password"
                            name="password"
                            placeholder="Password"
                            class="login-box" />

                            <input type="submit" class="login-box" name="signup_submit" value="Login" />
                        </form>
                </div>

                <div class="right">
                        <span class="loginwith text-dark">Sign in with<br />social network</span>

                        <a href="/auth/google" class="social-signin google">Log in with <i class="fab fa-google pr-1"></i></a>

                        <a href="/auth/facebook" class="social-signin facebook">Log in with <i class="fab fa-facebook pr-1"></i></a>

                        <a href="/users/forgot" class="social-signin facebook">Forget Password</a>
                </div>
                <div class="or">OR</div>
            </div>
        </div>
    </div>
</div>
<!-- Material form register -->
