<% layout('adminLayout') %>


<main class="pt-5 mx-lg-5">
  <div class="container">
      <div class="row">


          <div class="col-md-12">
              <div class="table-add mb-3 mr-2">
                  <a href="/admin-product/add-product" class="text-success"><i class="fas fa-plus fa-2x" aria-hidden="true"></i></a>
              </div>
              <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                  <thead>
                      <tr>
                          <th class="th-sm">No
                          </th>
                          <th class="th-sm">Name
                          </th>
                          <th class="th-sm">Category
                          </th>
                          <th class="th-sm">Price
                          </th>
                           <th class="th-sm">SellingPrice
                          </th>
                          <th class="th-sm">Quantity
                          </th>
                          <th class="th-sm">Description
                          </th>
                          <th class="th-sm">Buyer
                          </th>
                          <th class="th-sm">Image
                          </th>
                          <th class="th-sm">Edit
                          </th>
                          <th class="th-sm">Delete
                          </th>
                      </tr>
                  </thead>
                  <tbody>
                    <% for (var i = 0; i < products.length; i++) { -%>
                      <tr>
                        <td><%= i+1 %></td>
                        <td><%= products[i].name %></td>
                        <td><%= products[i].category.name %></td>
                        <td><%= products[i].price %></td>
                        <td><%= products[i].sellingPrice %></td>
                        <td><%= products[i].quantity %></td>
                        <td><%- products[i].description.substring(0, 50) %></td>
                        <td><%= products[i].buyer.name %></td>
                        <td><img width="80px" src="<%= products[i].image %>" alt=""></td>
                        <td>
                          <a href="/admin-product/edit/<%= products[i]._id %>" class="btn btn-info"><i class="fas fa-edit"></i></a>
                        </td>
                        <td>
                          <form style=" display: inline;" method="POST" action="/admin-product/delete/<%= products[i]._id %>?_method=DELETE">
                            <input type="hidden" name="_method" value="DELETE">
                            <button onclick="return confirm('Are You Sure')" class="btn btn-danger"><i class="far fa-trash-alt"></i></button>
                          </form>
                        </td>
                      </tr>
                    <% } -%>

                  </tbody>
              </table>
          </div>
      </div>
  </div>
</main>
