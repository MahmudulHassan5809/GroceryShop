<% layout('adminLayout') %>

<main class="pt-5 mx-lg-5">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
        <div class="table-add mb-3 mr-2">
            <a href="/admin-faq/add-faq" class="text-success"><i class="fas fa-plus fa-2x" aria-hidden="true"></i></a>
          </div>
				 <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                  <thead>
                      <tr>
                          <th class="th-sm">No
                          </th>
                          <th class="th-sm">Question
                          </th>
                          <th class="th-sm">Answer
                          <th class="th-sm">Delete
                          </th>
                      </tr>
                  </thead>
                  <tbody>
                    <% for (var i = 0; i < faqs.length; i++) { -%>
                      <tr>
                        <td><%= i+1 %></td>
                        <td><%= faqs[i].question %></td>
                        <td><%= faqs[i].answer %></td>
                        <td>
                          <form style=" display: inline;" method="POST" action="/admin-faq/delete/<%= faqs[i]._id %>?_method=DELETE">
                            <input type="hidden" name="_method" value="DELETE">
                            <button onclick="return confirm('Are You Sure')" class="btn btn-danger"><i class="far fa-trash-alt"></i></button>
                          </form>
                        </td>
                      </tr>
                    <% } -%>

                  </tbody>
              </table>
			</div>
		</div>
	</div>
</main>
