<% layout('adminLayout') %>

<main class="pt-5 mx-lg-5">
  <div class="container">
      <div class="row">


          <div class="col-md-12">
              <div class="table-add mb-3 mr-2">
                  <a href="/admin-category/add-category" class="text-success"><i class="fas fa-plus fa-2x" aria-hidden="true"></i></a>
              </div>
              <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                  <thead>
                      <tr>
                          <th class="th-sm">No
                          </th>
                          <th class="th-sm">Name
                          </th>
                          <th class="th-sm">Edit
                          </th>
                          <th class="th-sm">Delete
                          </th>
                      </tr>
                  </thead>
                  <tbody>
                    <% for (var i = 0; i < categories.length; i++) { -%>
                      <tr>
                        <td><%= i+1 %></td>
                        <td><%= categories[i].name %></td>
                        <td>
                          <a href="/admin-category/edit/<%= categories[i]._id %>" class="btn btn-info"><i class="fas fa-edit"></i></a>
                        </td>
                        <td>
                          <form style=" display: inline;" method="POST" action="/admin-category/delete/<%= categories[i]._id %>?_method=DELETE">
                            <input type="hidden" name="_method" value="DELETE">
                            <button onclick="return confirm('Are You Sure')" class="btn btn-danger"><i class="far fa-trash-alt"></i></button>
                          </form>
                        </td>
                      </tr>
                    <% } -%>

                  </tbody>
              </table>
          </div>
      </div>
  </div>
</main>

