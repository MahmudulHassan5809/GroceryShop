<% layout('adminLayout') %>


<main class="pt-5 mx-lg-5">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<!-- Default form subscription -->
				<form class="text-center border border-light p-5" action="/admin-role/add-role" method="POST">

				    <p class="h4 mb-4">Add Role</p>

				    <% include ../../partials/message %>
	                  <% include ../../partials/validationMessages %>

					<!-- Name -->
				    <input
				    type="text"
				    name="name"
				    class="form-control mb-4"
				    placeholder="Name"
				    value="<% if (data != undefined) { -%> <%= data.name %> <% } -%>"
	                >



				    <!-- Save in button -->
				    <button class="btn btn-info btn-block" type="submit">Save</button>


				</form>
				<!-- Default form subscription -->
			</div>
		</div>
	</div>
</main>
