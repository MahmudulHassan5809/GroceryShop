<% layout('layout') %>

<main>

	<div class="container">
		<div class="row wow fadeIn mt-3" id="search_result">
		</div>
		<div class="row">
			<div class="col-md-10 mx-auto mt-3">
				<% include ../partials/message %>
				<div id="cartMsg"></div>

				<% if (typeof cart !== 'undefined') { -%>
					<div class="card">
					<div class="card-body">

					    <!-- Shopping Cart table -->
					    <div class="table-responsive">

					      <table class="table product-table">

					        <!-- Table head -->
					        <thead class="mdb-color lighten-5">
						        <tr>
						            <th></th>
						            <th class="font-weight-bold">
						              <strong>Product</strong>
						            </th>

						            <th></th>
						            <th class="font-weight-bold">
						              <strong>Price</strong>
						            </th>
						            <th class="font-weight-bold">
						              <strong>QTY</strong>
						            </th>
						            <th></th>
						            <th class="font-weight-bold">
						              <strong>Amount</strong>
						            </th>
						            <th></th>
						        </tr>
					        </thead>
					        <!-- /.Table head -->

					        <!-- Table body -->
					        <tbody>

					        <!-- row -->
					        <% var total = 0; %>
						    <% cart.forEach(function(product){ %>
						    <% var sub = parseFloat(product.qty * product.price).toFixed(2) %>
						    <% total += +sub %>
								<tr>
						            <th scope="row">
						              <img src="<%= product.image %>" alt="" class="img-fluid z-depth-0" width="100px">
						            </th>
						            <td>
						              <h5 class="mt-3">
						                <strong><%= product.title %></strong>
						              </h5>
						              <p class="text-muted"><%= product.category %></p>
						            </td>

						            <td></td>
						            <td><%= product.price %></td>

						            <td><span id="<%= product.id %>"><%= product.qty %></span>
						            	<br>
						             	<b>Kg/piece</b>

						            </td>

						            <td>

						            <button data-productid="<%= product.id %>"  class="add_cart btn btn-info btn-sm"><i class="fas fa-plus"></i></button>
						            <button data-productid="<%= product.id %>"  class="minus_cart btn btn-danger btn-sm"><i class="fas fa-minus"></i></button>&nbsp;
						           </td>

						            <td class="font-weight-bold">
						              <strong id="<%= user._id %><%= product.id %>">৳<%= sub %></strong>
						            </td>
						            <td>
						              <button data-productid="<%= product.id %>"   class="remove_cart btn btn-sm btn-primary"
						                title="Remove item">X
						              </button>
						            </td>
						            <% }); %>
								</tr>
								<tr>
							        <td colspan="7" align="right"><b><h4>
							        Total: </b> <span id="totalAmount">৳<%= parseFloat(total).toFixed(2) %></span>
							        </h4></td>
							        <td>
							    		<a href="/cart/clear" type="button" class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="top"
						                title="Clear Cart">X</a>
							    	</td>
							    </tr>
							    <tr>
							    	<td colspan="8" align="right">
							    		<a
							    		href="/cart/checkout"
							    		class="btn btn-md btn-primary"
							    		>Checkout</a>
							    	</td>
							    </tr>

					        <!-- /. row -->



					        </tbody>
					        <!-- /.Table body -->

					      </table>

					    </div>
					    <!-- /.Shopping Cart table -->

					</div>

				</div>
				<% } else { -%>
					<div class="jumbotron jumbotron-fluid text-center">
		                <div class="container">
		                  <h2 class="display-4">আপনার শপিং কার্ট খালি।</h2>
		                  <p class="lead">আপনার পছন্দের   এবং  প্রয়োজনীয়  পণ্য  ক্রয় করার জন্য নিচের লিংকে ক্লিক করুন ।  ধন্যবাদ।</p>
		                  <a href="/" class="btn btn-info">ক্লিক করুন</a>
		                </div>
		              </div>
				<% } -%>
			</div>
		</div>
	</div>

</main>
